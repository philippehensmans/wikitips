# WikiTips Apache Configuration

# Encodage UTF-8
AddDefaultCharset UTF-8

# Protéger les fichiers de configuration
<Files "config.php">
    Require all denied
</Files>

<Files "config.local.php">
    Require all denied
</Files>

# Protéger les fichiers SQLite
<FilesMatch "\.(sqlite|db)$">
    Require all denied
</FilesMatch>
