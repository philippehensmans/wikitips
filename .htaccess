# WikiTips Apache Configuration

# Activer le module rewrite
RewriteEngine On

# Rediriger les requêtes API vers api/index.php
RewriteCond %{REQUEST_URI} ^/api/
RewriteRule ^api/(.*)$ api/index.php [L,QSA]

# Empêcher l'accès aux fichiers sensibles
<FilesMatch "(^\.|\.(php|sqlite|db)$)">
    # Autoriser les fichiers PHP publics
</FilesMatch>

# Protéger le dossier data
<IfModule mod_authz_core.c>
    <Directory "data">
        Require all denied
    </Directory>
</IfModule>

# Protéger les fichiers de configuration
<Files "config.php">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</Files>

# Types MIME
AddType application/json .json

# Encodage UTF-8
AddDefaultCharset UTF-8

# Cache pour les assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
</IfModule>
