{
    "manifest_version": 3,
    "name": "WikiTips - Capture & Analyse",
    "version": "1.0.0",
    "description": "Capturez du contenu web et analysez-le sous l'angle des droits humains",
    "permissions": [
        "activeTab",
        "storage",
        "contextMenus"
    ],
    "host_permissions": [
        "http://localhost/*",
        "https://*/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
